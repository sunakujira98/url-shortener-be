{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "strict": false,
    "sourceMap": true,
    "lib": ["es2021"],
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "lib",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
